<div class="sign-box col-10 offset-1">
  <div class="row">
    <div class="col-4">
      <%= image_tag 'user.png' %>
    </div>

    <div class="col-8">
      <h1><%= @user.username %>'s Dashboard</h1>
      <h3>Member Since: <%= @user.created_at.strftime("%B %Y") %></h3>
      <h4><%= @user.comments.count %> total comment(s)</h4>
      <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star review(s)</h4>
    </div>
  </div>
  <div class="clear"></div>
</div>

<br />
<h1 class="text-center">My Comments</h1>
<br />
<div class="row">  
  <% @user.comments.each do |comment| %>
    <div class="col-10 col-sm-6 col-lg-4">
      <h2 class="text-center underlined"><%= link_to comment.place.name, place_path(comment.place) %></h2>
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %><br />
        <small>- <%= comment.user.username %></small>
      </blockquote>
    </div>  
  <% end %>
</div>
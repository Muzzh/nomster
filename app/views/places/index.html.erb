
<% @places.each do |place| %>
  <div class="feat-box col-10 offset-1"> 
    <h1><%= link_to place.name, place_path(place) %></h1>
    <h2><%= place.occurence %></h2>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small>Added by: <%= place.user.username %> &nbsp&nbsp Contact: <%= place.user.email %></small>
    <% end %>
    <%if place.comments.present? %>
      <div class="col-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %><br />
          <small>by <%= place.comments.last.user.username %></small>
        </blockquote>
      </div>
    <% end %>
  </div>
  <br />

  </div>
<% end %>
<div class="paginate_container">
  <div class="paginate_div_class">
    <%= will_paginate @places %>
  </div>
</div>

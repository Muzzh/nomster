
<div class="sign-box col-8 offset-2">
  <h2>Sign up</h2>
  <br />
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, placeholder: "Enter valid email address" %>
      <%= f.input :username, required: true, uniqueness: true %>
      <%= f.input :password, required: true, placeholder: "8 characters minimum" %>
      <%= f.input :password_confirmation, required: true %>
    </div>
    <br />
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn btn-warning' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  
</div>  
